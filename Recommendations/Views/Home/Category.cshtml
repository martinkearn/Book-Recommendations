@model Recommendations.ViewModels.HomeCategoryViewModel

@{
    ViewData["Title"] = Model.CategoryName;
}

<div class="jumbotron">
    <h1>@ViewData["Title"]</h1>
    <p>Showing all items in this category</p>
    <p>Click an item to see details and recommendations</p>
</div>

@foreach (var catalogItem in Model.catalogItems)
{
    <p><a asp-action="CatalogItem" asp-controller="Home" asp-route-id="@catalogItem.Id">@catalogItem.Title</a> <a asp-controller="Cart" asp-action="Add" asp-route-id="@catalogItem.Id" class="btn btn-default btn-xs">Add To Cart</a></p>
}

<hr />
<p><a asp-action="Category" asp-controller="home" asp-route-page="@Model.PreviousPage">< Previous</a> @Model.CurrentPage of @Model.TotalPages <a asp-action="Category" asp-controller="home" asp-route-page="@Model.NextPage">Next ></a></p>
